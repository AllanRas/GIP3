@model IEnumerable<Lekkerbek12Gip.Models.Product.Drank>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Dranken</h1>

@if (User.IsInRole("Admin") || User.IsInRole("Kassamedewerker"))
    {
        <p>
            <a asp-action="Create">Nieuwe drank toevoegen</a>
        </p>
    }
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Prijs)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WithBtwPrijs)
            </th>
            @if (User.IsInRole("Admin") || User.IsInRole("Kassamedewerker"))
            {
                <th></th>
            }

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Prijs)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category.CategoryId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WithBtwPrijs)
            </td>
            @if (User.IsInRole("Admin") || User.IsInRole("Kassamedewerker"))
            {
                <td>
                    <a asp-action="Edit" asp-route-id="@item.DrankId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.DrankId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.DrankId">Delete</a>
                </td>
            }
        </tr>
        }
    </tbody>
</table>
