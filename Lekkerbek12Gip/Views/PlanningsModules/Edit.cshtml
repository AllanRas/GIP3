@model Lekkerbek12Gip.Models.PlanningsModule

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Bewerken</h1>

<h4>PlanningsModule</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="PlanningsModuleId" />
            <div class="form-group">
                <label asp-for="ChefId" class="control-label"></label>
                <input asp-for="ChefId" class="form-control" />
                <span asp-validation-for="ChefId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OpeningsUren" class="control-label"></label>
                <input asp-for="OpeningsUren" class="form-control" />
                <span asp-validation-for="OpeningsUren" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Opslaan" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Terug naar planning</a>
</div>

