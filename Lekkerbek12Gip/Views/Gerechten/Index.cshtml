@model IEnumerable<Lekkerbek12Gip.Models.Gerecht>

@{
    ViewData["Title"] = "Index";
}
<img id="logo" src="~/img/Lekkerbek.jpeg" />
<h1>Menu</h1>

<p>
    <a asp-action="Create">Nieuw gerecht aanmaken</a>
</p>

<h2>SANDWICHES</h2>

<table class="table">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Naam)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Omschrijving)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Prijs)
            </th>
           
            <th></th>
        </tr>
    </thead>

    @foreach (var item in Model.Where(x => x.Categorie == "SANDWICHES"))
    {
        <tbody>
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Naam)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Omschrijving)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Prijs) $
                </td>
             
                <td>
                    <a asp-action="Edit" asp-route-id="@item.GerechtId" class="btn btn-success">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.GerechtId" class="btn btn-info">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.GerechtId" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        </tbody>
    }
</table>
