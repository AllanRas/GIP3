@model IEnumerable<Lekkerbek12Gip.Models.Category>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Categorieën</h1>

<p>
    <a asp-action="Create">Nieuwe Categorie toevoegen</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.CategoryId">Bewerken</a> |
                <a asp-action="Delete" asp-route-id="@item.CategoryId">Verwijderen</a>
            </td>
        </tr>
}
    </tbody>
</table>
