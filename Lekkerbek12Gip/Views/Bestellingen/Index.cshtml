            <th>
                @Html.DisplayNameFor(model => model.OrderDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Afgerekend)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AfhaalTijd)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Korting)
