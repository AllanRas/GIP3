            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OrderDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Afgerekend)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AfhaalTijd)
            </td>
