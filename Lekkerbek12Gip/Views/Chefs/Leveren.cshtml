@model Lekkerbek12Gip.Models.Bestelling

@{
    ViewData["Title"] = "Leveren";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Leveren</h1>

<div>
    <h4>Bestelling</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.SpecialeWensen)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SpecialeWensen)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.BestelingStatus)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.BestelingStatus)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.OrderDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.OrderDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.AfhaalTijd)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AfhaalTijd)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Chef)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Chef.ChefName)
        </dd>
    </dl>
</div>
<div>
    <form asp-action="Leveren">
        <input type="hidden" asp-for="BestellingId" />
        <input type="submit" value="Leveren" class="btn btn-danger" /> |
        <a asp-action="Index">Terug naar bestellingen</a>
    </form>
</div>
