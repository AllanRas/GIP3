@model Lekkerbek12Gip.Models.Review

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>Review aanpassen</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ReviewId" />
            <div class="form-group">
                <input type="hidden" asp-for="KlantId" class="form-control" />
                <span asp-validation-for="KlantId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ReviewMessage" class="control-label"></label>
                <textarea asp-for="ReviewMessage" id="reviewmsg" style="resize: none" name="message" rows="4" cols="80" maxlength="1000"></textarea>
                <span asp-validation-for="ReviewMessage" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Score" class="control-label"></label>
                <input asp-for="Score" class="form-control" />
                <span asp-validation-for="Score" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="TimeOfReview" class="form-control" />
                <span asp-validation-for="TimeOfReview" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Aanpassen" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">annuleren</a>
</div>

