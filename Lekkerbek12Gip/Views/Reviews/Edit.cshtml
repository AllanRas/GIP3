                <label asp-for="Score" class="control-label"></label>
                <input asp-for="Score" class="form-control" />
                <span asp-validation-for="Score" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TimeOfReview" class="control-label"></label>
                <input asp-for="TimeOfReview" class="form-control" />
                <span asp-validation-for="TimeOfReview" class="text-danger"></span>
            </div>
