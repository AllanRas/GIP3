@model Lekkerbek12Gip.Models.Review

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Review</h1>

<h4>Plaatsen</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @if (User.IsInRole("Admin"))
            {
                <div class="form-group">
                    <label asp-for="KlantId" class="control-label"></label>
                    <select asp-for="KlantId" class="form-control" asp-items="@ViewBag.Klant"></select>
                </div>
            }
            else
            {
                <div class="form-group">
                    <input type="hidden" asp-for="KlantId" class="form-control" value=@ViewBag.KlantId readonly />
                    <span asp-validation-for="KlantId" class="text-danger"></span>
                </div>
            }
            <div class="form-group">
                <label asp-for="ReviewMessage" class="control-label"></label>
                <textarea style="resize: none" name="message" rows="4" cols="80" maxlength="1000"></textarea>
                <span asp-validation-for="ReviewMessage" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Score" class="control-label"></label>
                <input asp-for="Score" class="form-control" />
                <span asp-validation-for="Score" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Plaats review" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Annuleren</a>
</div>

