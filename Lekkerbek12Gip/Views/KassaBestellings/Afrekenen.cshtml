@model Lekkerbek12Gip.Models.Bestelling

@{
    ViewData["Title"] = "Afrekenen";
}

<h1>Bestelling</h1>

<h3>Wilt u deze bestelling afrekenen?</h3>
<div>
    <h4>Bestelling</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SpecialeWensen)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SpecialeWensen)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.OrderDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.OrderDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Afgerekend)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Afgerekend)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AfhaalTijd)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AfhaalTijd)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Korting)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Korting)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TotalPrijs)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TotalPrijs)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Klant)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Klant.KlantId)
        </dd>
    </dl>

    <form asp-action="Afrekenen">
        <input type="hidden" asp-for="BestellingId" />
        <input type="submit" value="Afrekenen" class="btn btn-danger" /> |
        <a asp-action="Index">Terug naar bestellingen</a>
    </form>
</div>
