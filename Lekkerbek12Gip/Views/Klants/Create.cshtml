@model Lekkerbek12Gip.Models.Klant

@{
    ViewData["Title"] = "Create";
}

<h1>Aanmaken</h1>

<h4>Klant</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Adress" class="control-label"></label>
                <input asp-for="Adress" class="form-control" />
                <span asp-validation-for="Adress" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Geboortedatum" class="control-label"></label>
                <input asp-for="Geboortedatum" class="form-control" />
                <span asp-validation-for="Geboortedatum" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="emailadres" class="control-label"></label>
                <input asp-for="emailadres" class="form-control" type="email" />
                <span asp-validation-for="emailadres" class="text-danger"></span>
            </div>
            @*<div class="form-group">
                    <label asp-for="Firma.BtwNummer" class="control-label"></label>
                    <input asp-for="Firma.BtwNummer" class="form-control" />
                    <span asp-validation-for="Firma.BtwNummer" class="text-danger"></span>
                </div>
                <div>
                    <label asp-for="Firma.FirmaNaam" class="control-label"></label>
                    <input asp-for="Firma.FirmaNaam" class="form-control" />
                    <span asp-validation-for="Firma.FirmaNaam" class="text-danger"></span>
                </div>*@
            <div class="form-group">
                <input type="submit" value="Aanmaken" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

